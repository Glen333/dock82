# ============================================
# FRONTEND - React App Environment Variables
# ============================================

# Supabase Configuration (Frontend)
REACT_APP_SUPABASE_URL=https://phstdzlniugqbxtfgktb.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Stripe Configuration (Frontend)
REACT_APP_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# API URL (use localhost for local development)
REACT_APP_API_URL=http://localhost:3000

# Debug Mode (optional)
REACT_APP_DEBUG_MODE=true

# ============================================
# BACKEND - API Environment Variables
# ============================================

# Supabase Configuration (Backend)
SUPABASE_URL=https://phstdzlniugqbxtfgktb.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Next.js / Vercel Format (if needed)
NEXT_PUBLIC_SUPABASE_URL=https://phstdzlniugqbxtfgktb.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Vite Format (if needed)
VITE_SUPABASE_URL=https://phstdzlniugqbxtfgktb.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ============================================
# PAYMENT PROCESSING - Stripe
# ============================================

# Stripe Secret Key (Backend Only - NEVER expose to frontend!)
STRIPE_SECRET_KEY=your_stripe_secret_key_here

# Stripe Publishable Key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# ============================================
# DATABASE - PostgreSQL
# ============================================

# PostgreSQL Connection String
# Format: postgresql://username:password@host:port/database
POSTGRES_URL=postgresql://localhost:5432/dock_rental

# Alternative format (if needed)
DATABASE_URL=postgresql://localhost:5432/dock_rental

# ============================================
# EMAIL - Resend API
# ============================================

RESEND_API_KEY=your_resend_api_key_here

# ============================================
# NOTES FOR LOCAL DEVELOPMENT
# ============================================
#
# 1. Supabase Keys:
#    - Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
#    - ANON_KEY: Safe for frontend use
#    - SERVICE_ROLE_KEY: Backend only, has elevated permissions
#
# 2. Stripe Keys:
#    - Get test keys from: https://dashboard.stripe.com/test/apikeys
#    - Use test keys (pk_test_... and sk_test_...) for development
#    - Use live keys (pk_live_... and sk_live_...) for production only
#
# 3. PostgreSQL Database:
#    - Install PostgreSQL locally or use Docker
#    - Create database: createdb dock_rental
#    - Update POSTGRES_URL with your credentials
#
# 4. Resend Email:
#    - Sign up at: https://resend.com
#    - Get API key from dashboard
#    - Optional for basic functionality
#
# ============================================

